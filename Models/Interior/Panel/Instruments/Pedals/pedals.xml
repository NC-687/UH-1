<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>pedals.ac</path>

  <animation>
<type>material</type>
    <object-name>LHpedal</object-name>
    <object-name>RHpedal</object-name>
<emission>
<red>1.0</red>
			<green>1.0</green>
			<blue>1.0</blue>
<factor-prop>/controls/lighting/dash-dim</factor-prop>
</emission>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>LHpedal</object-name>
    <property>controls/flight/rudder</property>
    <factor> 0.07 </factor>
    <axis>
      <x>  1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>LHpedal</object-name>
    <property>controls/gear/brake-left</property>
    <factor> -20 </factor>
    <axis>
      <x>  0 </x>
      <y>  1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>RHpedal</object-name>
    <property>controls/flight/rudder</property>
    <factor> -0.07 </factor>
    <axis>
      <x>  1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>RHpedal</object-name>
    <property>controls/gear/brake-right</property>
    <factor> -20 </factor>
    <axis>
      <x>  0 </x>
      <y>  1 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

