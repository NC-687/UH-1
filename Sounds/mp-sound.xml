		<starter>
			<name>starter0_start</name>
			<mode>once</mode>
			 <path>Aircraft/UH-1/Sounds/v22_turbine_strt_out.wav</path>
			<condition>
				<property>controls/engines/engine/master-bat</property>
			</condition>
			<volume>
				<factor>0.3</factor>
			</volume>
			<position>
				<x>-0.88</x>
				<y>0.40</y>
				<z>0.5</z>
			</position>
			<reference-dist>5</reference-dist>
			<max-dist>10</max-dist>
		</starter>

		
