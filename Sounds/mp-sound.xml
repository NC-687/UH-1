		<rotor>
			<name>rotor-outside</name>
			<mode>looped</mode>
			  <path>Aircraft/UH-1/Sounds/outside_only_flap.wav</path>
			<condition>
				<and>
					<not>
						<property>sim/current-view/internal</property>
					</not>
					<greater-than>
						<property>rotors/main/rpm</property>
						<value>50</value>
